
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isSignedIn() && getUserData().role in ['admin', 'super_admin'];
    }
    
    function isSuperAdmin() {
      return isSignedIn() && getUserData().role == 'super_admin';
    }

    // =========================
    // üîê Users Collection
    // =========================
    match /users/{userId} {
      // Allow any signed-in user to read any user's profile.
      // This is needed for resolving user names, avatars, and for permission checks.
      allow read: if isSignedIn();
      
      // Allow user to create/update their own profile.
      // Allow admins to update any user profile.
      allow create, update: if (isOwner(userId) && !("role" in request.resource.data)) || isAdmin();

      // Only super admins can delete users.
      allow delete: if isSuperAdmin();
    }
    
    // =_=_=_=_=_=_=_=_=_=_=_=_=_=
    // üìÖ Events Collection
    // =========================
    match /events/{eventId} {
      // Any authenticated user can view events.
      allow get, list: if isSignedIn();
      // Only admins can create, update, or delete events.
      allow create, update, delete: if isAdmin();
    }
    

    // =========================
    // ‚úÖ Attendance Collection
    // =========================
    match /attendance/{attendanceId} {
      // Admins or owners can read
      allow read: if isSignedIn() &&
        (isAdmin() || resource.data.userId == request.auth.uid);

      // Visitor logic: unauthenticated users allowed if proper fields provided
      allow create: if (
        (!isSignedIn() &&
          request.resource.data.attendanceType == 'visitor' &&
          request.resource.data.keys().hasAll([
            'eventId',
            'status',
            'visitorName',
            'visitorDesignation',
            'visitorClub',
            'visitorComment',
            'timestamp'
          ]) &&
          !request.resource.data.keys().hasAny(['userId']))
        ||

        // Member logic: must be signed in and include own user ID
        (isSignedIn() &&
          request.resource.data.attendanceType == 'member' &&
          request.resource.data.userId == request.auth.uid &&
          request.resource.data.keys().hasAll([
            'eventId',
            'status',
            'userId',
            'timestamp'
          ])
        )
      );

      allow update, delete: if isAdmin();
    }

    // =========================
    // üí¨ Communication Groups
    // =========================
    match /communicationGroups/{groupId} {
      allow read, write: if isAdmin();
    }

    // =========================
    // üí° Project Ideas
    // =========================
    match /projectIdeas/{ideaId} {
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.authorId;

      allow read: if isSignedIn() &&
        (resource.data.authorId == request.auth.uid || isAdmin());

      allow update: if isSignedIn() &&
        (resource.data.authorId == request.auth.uid || isAdmin());

      allow delete: if isAdmin();
    }
    
     match /transactions/{transactionId} {
        // Only admins can manage financial transactions
        allow read, create, update, delete: if isAdmin();
    }

    // =========================
    // üèÜ Points Entries
    // =========================
    match /pointsEntries/{entryId} {
      allow read, write: if isAdmin();
    }
    
      // Daily Tasks Collection (For Birthday Trigger)
    match /dailyTasks/{taskId} {
        // Only cloud functions should write to this (simulated by admin-only write access)
        allow read, write: if isAdmin();
    }

    // =========================
    // üìã Tasks Collection
    // =========================
    match /tasks/{taskId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (request.auth.uid in resource.data.assigneeIds || isAdmin());
      allow delete: if isAdmin();
    }

    // =========================
    // üí¨ Task Comments Sub-Collection
    // =========================
    match /tasks/{taskId}/comments/{commentId} {
        allow read, list: if isSignedIn();
        allow create: if isSignedIn();
        allow update, delete: if isSignedIn() && isOwner(resource.data.authorId);
    }
    
    // =========================
    // üìù Task Activity Sub-Collection
    // =========================
     match /tasks/{taskId}/activity/{activityId} {
        allow read, list: if isSignedIn();
        allow create: if isSignedIn() || isAdmin(); // Allow system/functions to log
        allow update, delete: if isAdmin();
    }
  }
}
