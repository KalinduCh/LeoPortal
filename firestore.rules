
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users Collection
    match /users/{userId} {
      // Authenticated users can read and write (create, update, delete) their own document
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Admins can perform all CRUD operations on any user document
      allow list, get, create, update, delete: if request.auth != null && 
                                              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Events Collection
    match /events/{eventId} {
      // Any authenticated user can read events
      allow read: if request.auth != null;
      
      // Only admins can create, update, or delete events
      allow create, update, delete: if request.auth != null && 
                                    get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Attendance Collection
    match /attendance/{attendanceId} {
      // Users can create their own attendance record
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Users can read their own attendance records
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Admins can perform all CRUD operations on any attendance record.
      // This allows admins to view all attendance, and manually add/edit/delete records if necessary.
      allow list, get, create, update, delete: if request.auth != null && 
                                 get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // Regular users cannot update or delete attendance records directly after creation (admins can)
      allow update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
