
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      // A user can read and write (create, update, delete) their own document
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // An admin can list, get (read), AND DELETE any user document.
      allow list, get, delete: if request.auth != null && 
                                get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /events/{eventId} {
      // Any authenticated user can read events
      allow read: if request.auth != null;
      // Only admins can create, update, or delete events
      allow create, update, delete: if request.auth != null && 
                                    get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /attendance/{attendanceId} {
      // User can create their own attendance record (ensuring userId in record matches auth uid)
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // User can read their own attendance records
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Admins can read all attendance records (optional - uncomment if needed for reporting)
      // allow read: if request.auth != null && 
      //                 (resource.data.userId == request.auth.uid || 
      //                  get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');

      // Disallow updates or deletes by users for now
      allow update, delete: if false;
    }

  }
}
